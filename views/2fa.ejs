<!doctype html>
<html lang="en">
    <head>
        <%- include('./components/head/stylesheets') %> 
        <%- include('./components/head/scripts') %> 
        <%- include('./components/head/meta') %>
    </head>
    <body>
        <div id="loading">
            <div id="loading-center">
            </div>
        </div>
        <section class="sign-in-page">
            <div class="container">
                <div class="row justify-content-center align-items-center height-self-center">
                    <div class="col-md-6 col-sm-12 col-12 align-self-center">
                        <div class="sign-user_card ">
                            <div class="d-flex justify-content-center">
                                <div class="sign-user_logo">
                                    <img src="images/logo.png" class=" img-fluid" alt="Logo">
                                </div>
                            </div>
                            <div class="sign-in-page-data">
                                <div class="sign-in-from w-100 pt-5 m-auto">
                                    <h1 class="mb-3 text-center">Verification code</h1>
                                    <form class="mt-4" action="/2fa/submit" method="POST">
                                        <div class="form-group">
                                            <label for="code">Verification code</label>
                                            <input type="text" class="form-control mb-0" minlength="6" maxlength="6"
                                                id="code" name="code" placeholder="6-digits code">
                                        </div>
                                        <div class="sign-info">
                                            <button type="submit" class="btn btn-primary mb-2">Submit</button>
                                            <h5 class="mb-3 text-center text-primary">Please check your email</h5>
                                            <h6 class="mb-3 text-center text-grey" style="font-size: 12px; margin-top: -20px;color: gray;text-decoration: underline;">Check spam if not found</h6>
                                        </div>
                                    </form>
                                    <p id="error-message" style="color: red;"></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </body>
</html>